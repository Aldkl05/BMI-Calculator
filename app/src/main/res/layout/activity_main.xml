<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_app"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/genderLayout"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="195dp">


        <androidx.cardview.widget.CardView
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/card_bg"
            >

<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
            android:src="@drawable/icon_female"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        />


</LinearLayout>




        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/card_bg"
            >

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/icon_trans"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    />


            </LinearLayout>




        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/sliderCard"
        android:layout_below="@+id/genderLayout"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="15dp"

        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/card_bg"
        >


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height (CM) "
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"

                />
            <TextView
                android:id="@+id/displayHeight"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="44sp"
                android:text="153"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"

                />
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="153"
                android:max="244"
                android:progressTint="@color/purple"
                android:thumbTint="@color/btn_color"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_below="@+id/sliderCard"
        android:id="@+id/vitalLayout"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="195dp">


        <androidx.cardview.widget.CardView
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/card_bg"
            >

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/weightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        android:padding="20dp"

                        >

                        <TextView
                            android:id="@+id/plusWeight"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                                android:text="+"
                        />
                    </androidx.cardview.widget.CardView>




                    <View

                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        android:padding="20dp"

                        >

                        <TextView
                            android:id="@+id/minusWeight"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="-"
                            />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>




        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/card_bg"
            >

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_height="20dp"
                    android:layout_width="wrap_content"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/ageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        android:padding="20dp"

                        >

                        <TextView
                            android:id="@+id/plusAge"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="+"
                            />
                    </androidx.cardview.widget.CardView>




                    <View

                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        android:padding="20dp"

                        >

                        <TextView
                            android:id="@+id/minusAge"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="28sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="-"
                            />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    
    <LinearLayout
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/btn_color"
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <TextView
            android:id="@+id/calulateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:textColor="@color/white"
            android:textSize="44sp"
            />
        
        
    </LinearLayout>
    
    
</RelativeLayout>